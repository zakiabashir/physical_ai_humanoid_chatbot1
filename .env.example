# ==============================================================================
# AI-Native Textbook Platform - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ------------------------------------------------------------------------------
# Frontend (Vercel)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_AUTH_API_URL=https://auth-service.production.railway.app
NEXT_PUBLIC_CHATBOT_API_URL=https://chatbot-service.production.railway.app
NEXT_PUBLIC_PERSONALIZATION_API_URL=https://personalization-service.production.railway.app

# ------------------------------------------------------------------------------
# Auth Service (Railway)
# ------------------------------------------------------------------------------
# Database Connection (Neon PostgreSQL)
DATABASE_URL='postgresql://user:password@ep-xyz.region.aws.neon.tech/neondb?sslmode=require&channel_binding=require'

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 7 days

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# OAuth Providers
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URI=https://your-frontend.com/auth/callback/google

OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_GITHUB_REDIRECT_URI=https://your-frontend.com/auth/callback/github

# ------------------------------------------------------------------------------
# Chatbot Service (Railway)
# ------------------------------------------------------------------------------
# Qdrant Vector Database
QDRANT_URL=https://xyz.aws.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_EN=textbook_en
QDRANT_COLLECTION_UR=textbook_ur

# Cohere API (Embeddings)
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL = embed-multilingual-v3.0

# Groq API (LLM)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# ------------------------------------------------------------------------------
# Personalization Service (Railway)
# ------------------------------------------------------------------------------
# Database Connection (shared Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@ep-xyz.region.aws.neon.tech/ai_textbook?sslmode=require

# ------------------------------------------------------------------------------
# Local Development
# ------------------------------------------------------------------------------
# Override with local values for development
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_textbook
# QDRANT_URL=http://localhost:6333
